<p style="color: green"><%= notice %></p>

<h1>Comments</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to "Show this comment", [@article, comment] %>
    </p>
  <% end %>
</div>

<%= link_to "New comment", new_article_comment_path(@article) %>
